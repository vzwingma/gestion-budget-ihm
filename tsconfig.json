{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
      "ESNEXT"
    ],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}